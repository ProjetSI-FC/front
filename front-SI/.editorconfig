## EDITORCONFIG sert à que tout le monde ait la même esthétique de code ##
# Exemple : Un indent de même taille, la même policen même alphabet etc ... #

# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
